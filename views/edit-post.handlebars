<article>
    <a href="/dashboard"> &larr; Back to dashboard</a>
    <h2>
        Edit Post
    </h2>
    <form class="edit-post-form">
        <div>
            {{!-- creates the text where you would edit the title, it comes prefilled with the current title --}}
            <input name="post-title" type="text" value="{{post.title}}" />
            {{!-- displays the formatted url of the link associated with the post --}}
            {{!-- format_url --}}
            {{!--   - to use helper functions we told Handlebars about the js files in utils  --}}
            {{!--       - we did this in the server.js file --}}
            {{!--           - we imported them there, and then placed it in 'const hbs = exphbs.create({ helpers });' --}}
            <span>({{format_url post.post_url}})</span>
        </div>
        <div>
            {{post.vote_count}} {{format_plural "point" post.vote_count}} by you on {{format_date post.created_at}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comment.length}}</a>
        </div>
        <button type="submit" class=".edit-post-btn">Save post</button>
        <button type="button" class="delete-post-btn">Delete post</button>
    </form>
</article>

{{!-- a form for adding new comments --}}
<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit">add comment</button>
    </div>
</form>

{{!-- display comments the post already has --}}
{{!-- 'comments' is the name of the handlebars partial file --}}
{{!-- 'post.comments' is the section of the 'post' object thtat has the the comments related to the post --}}
{{> comments post.comments}}

